<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teamwork.integrationproject.mapper.StudentMapper">

    <resultMap id="Student" type="com.teamwork.integrationproject.entity.Student">
        <result property="name" column="s_name"></result>
        <result property="age" column="s_age"></result>
        <result property="grade" column="s_grade"></result>
    </resultMap>

    <insert id="addStudentList" parameterType="java.util.List">
        insert into t_student (s_name,s_age,s_grade)
        values
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.name},#{item.age},#{item.grade})
        </foreach>
    </insert>

    <select id="selectStudentPage" resultMap="Student">
        select * from t_student
    </select>
</mapper>
